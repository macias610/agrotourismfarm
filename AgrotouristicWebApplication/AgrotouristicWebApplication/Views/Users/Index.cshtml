@model PagedList.IPagedList<Repository.Models.User>
@using PagedList.Mvc
@using Repository.Models

@{
    ViewBag.Title = "Index";
}

<h2>Lista użytkowników</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("LP")
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Surname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Select((value, i) => new { i, value }))  {
    User value = item.value;
    int index = item.i + 1;
    <tr>
        <td>
            @index.ToString()
        </td>
        <td>
            @value.Email
        </td>
        <td>
            @value.Name
        </td>
        <td>
            @value.Surname
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=value.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=value.Id }) |
            @Html.ActionLink("Usuń użytkownika", "Delete", new { id=value.Id })
        </td>
    </tr>
}
</table>

<div>
    <br />
    Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

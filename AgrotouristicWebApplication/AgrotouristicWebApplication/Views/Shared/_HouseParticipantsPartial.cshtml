@model IList<Participant>
@using Repository.Models


@for(int i = 0; i < Model.ToList().Count; i++)
{
    <tr>
        <td>@Html.Label("LP", (i + 1).ToString())</td>
        <td>
            @Html.EditorFor(model => model[i].Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model[i].Name, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model[i].Surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model[i].Surname, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model[i].BirthDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model[i].BirthDate, "", new { @class = "text-danger" })
        </td>
    </tr>  
}

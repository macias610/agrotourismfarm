@model Repository.ViewModels.ReservationAttractions
@using Repository.ViewModels

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script type="text/javascript">
        $(document).ready(function () {
            $("thead td input[type='button']").click(function () {

                var $td = $(this).closest("td");

                var selectedAttractions = $td.find("[name^='AttractionsAvaiableAttractions']").val();

                var selectedParticipants = $td.find("[name^='AttractionsQuantityParticipants']").val();

                var selectedDate = $td.find("[name^='Term']").val();

                alert(selectedDate);
            });
        });
    </script>

</head>

<div id="TimeTableDetails" class="form-horizontal">
    <div class="form-inline" style="clear:both">
        @Html.Label("Dzień", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-2">
            @Html.DropDownList("AttractionsDaysOfWeek", Model.DaysOfWeek, new { id = "AttractionsDaysOfWeek" })
        </div>
    </div>

    <div class="form-inline">
        @Html.Label("Warsztat", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-2">
            @Html.DropDownList("AttractionsAvaiableAttractions", Model.AvaiableAttractions, new { id = "AttractionsAvaiableAttractions" })
        </div>
    </div>

    <div class="form-inline">
        @Html.Label("Liczba uczestników", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-1">
            @Html.DropDownList("AttractionsQuantityParticipants", Model.ParticipantsQuantity, new { id = "AttractionsQuantityParticipants" })
        </div>
    </div>

    <input type="button" id="btnSaveAttraction" value="Wybierz" class="btn btn-default" style="display:inline-flex" />

    <div style="clear:both"/>

    <table class="table" border="1">
        <thead>
            <tr>
                <td>
                    <p>
                        Terminy
                    </p>
                    <br/>
                    <br/>
                    <p>
                        Warsztat
                    </p>
                    <p>
                        Liczba uczestników
                    </p>
                    
                </td>
                @foreach(DateTime date in Model.AssignedAttractions.Keys.ToList())
                {
                    <td>
                        <p>
                            <input type="text" name="Term" readonly="readonly" value="@date.ToShortDateString()" style="width:90px;border:0"/>        
                        </p>
                        <p>
                            <input type="text" name="DayOfWeek" readonly="readonly" value="@(ReservationAttractions.Days[date.DayOfWeek.ToString()])" style="width:90px;border:0"/>  
                        </p>
                        <p>
                            @Html.DropDownList("AttractionsAvaiableAttractions", Model.AvaiableAttractions)
                        </p>
                        <p>
                            @Html.DropDownList("AttractionsQuantityParticipants", Model.ParticipantsQuantity)
                        </p>
                        <p>
                            <input type="button" value="Wybierz" />
                        </p>
                    </td>
                }
            </tr>
        </thead>
        <tbody>
            @for(int i=0;i<Model.MaxRows;i++)
            {
                <tr>
                    <td>
                        <p>Atrakcja:</p>
                        <p>Liczba osób:</p>
                    </td>
                    @foreach (DateTime date in Model.AssignedAttractions.Keys.ToList())
                    {
                        <td>
                            @if(i<Model.AssignedAttractions[date].Count)
                            {
                                <p>@Model.AssignedAttractions[date][i].Split(',')[0]</p>
                                <p>@Model.AssignedAttractions[date][i].Split(',')[1]</p>
                            }
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>


</div>


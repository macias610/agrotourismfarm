@model IEnumerable<Repository.Models.Reservation>
@using Repository.Models

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("LP")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadlinePayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverallCost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Select((value, i) => new { i, value }))
    {
        Reservation value = item.value;
        int index = item.i + 1;
        <tr>
            <td>
                @index.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.Client.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.DeadlinePayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => value.OverallCost)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = value.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = value.Id })
                @if (value.Status.Equals("Zakończona"))
                {
                    @Html.ActionLink("Usuń", "Delete", new { id = value.Id })
                }
            </td>
        </tr>
    }

</table>
